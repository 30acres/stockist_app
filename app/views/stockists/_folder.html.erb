<% if key['is_dir'] == true %>
    <%= link_to url_for(path: key['path']), class: 'button' do   %>
      <i class="fa fa-folder"></i>
      <%= key['path'].split('/').last.titleize %>
      <% if @client.metadata("#{key['path']}")['contents'] %>
        <small>
        (<%= @client.metadata("#{key['path']}")['contents'].count  %>)
      </small>
      <% end %>
    <% end %>
<% end %>
