.row
  .header
    %h1 Find Eye of Horus in #{@stockist.city}, #{@stockist.country}

.row
  .columns.large-12
    #map{style: 'width: 100%; height: 500px;'}

.row
  .columns.large-12
    .row.panel
      %h4= @stockist.name
      %ul
        %li Directions to here
        %li More nearby
        %li Send to a friend (SHARE)
        %li Link to website
        %li Phone Number
      = @stockist.inspect


= content_for :footer_scripts do
  :coffeescript
    handler = Gmaps.build("Google")
    handler.buildMap
      provider:
        disableDefaultUI: true
      internal:
        id: "map"
    , ->
      markers = handler.addMarkers(#{raw @hash.to_json })
      handler.bounds.extendWith markers
      handler.fitMapToBounds()

