.row
  .columns.large-12
    .header
      %h1 Find Eye of Horus at #{@stockist} in #{@stockist.city.squeeze(" ").strip}, #{@stockist.country}

.row
  .columns.large-12
    #map{style: 'width: 100%; height: 500px;'}
    %br/

.row
  .columns.large-6
    .panel
      %h4= @stockist
      %p= @stockist.address
      %ul
        %li.nearby{style: 'display: none;'}
          = link_to stockists_path, data: { longitude: '', latitude: '' }, id: 'nearby' do
            Find an #{c('site_name')} near you
        %li= link_to 'More nearby...', stockists_path(long: @stockist.longitude, lat: @stockist.latitude, loc: @stockist.city)
        - if @stockist.primary_phone
          %li Phone Number
        - if @stockist.website
          %li Link to website
      = render 'application/share_buttons'
  .columns.large-6
    .panel
      %h4 About #{c('site_name')}
      %p= raw "#{c('description')}"
      = link_to "#{c('site_name')} Website", c('website'), class: 'button'


= content_for :footer_scripts do
  = render partial: 'maps/map', locals: { hash: @hash, zoom: 12 }

= content_for :title do
  Find #{c('site_name')} at #{@stockist.name} in #{@stockist.city}

