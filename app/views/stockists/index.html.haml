.row
  .header
    %h1 
      Find an Eye of Horus Stockist Near
      = params[:loc] ? params[:loc] : ' You'

.row
  .columns.large-12
    #map{style: 'width: 100%; height: 500px;'}
    %br/

.row
  .columns.large-12
    = cell(:stockist, collection: @paged_stockists, method: :teaser, site: @site)
    = paginate(@paged_stockists)

.row
  .columns.large-12
    %hr/
    Find #{c('name')} by Country
    - @all_countries.order(name: :asc).each do |country|
      = link_to country, class: 'button' do
        #{country.name} (#{country.stockists.count})

= content_for :footer_scripts do
  = render partial: 'maps/map', locals: { hash: @hash, zoom: nil }
