.row
  .header
    %h1 Find an Eye of Horus Stockist Near You

.row
  .columns.large-12
    #map{style: 'width: 100%; height: 500px;'}

.row
  .columns.large-12
    - @stockists.each do |stockist|
      .row.panel

        %h4= link_to stockist.name, stockist
        = stockist.inspect


= content_for :footer_scripts do
  :coffeescript
    handler = Gmaps.build("Google")
    handler.buildMap
      provider:
        disableDefaultUI: true
      internal:
        id: "map"
    , ->
      markers = handler.addMarkers(#{raw @hash.to_json })
      handler.bounds.extendWith markers
      handler.fitMapToBounds()
