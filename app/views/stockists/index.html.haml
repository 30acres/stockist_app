.row
  .header
    %h1 Find an Eye of Horus Stockist Near You

.row
  .columns.large-12
    Find #{c('name')} by Country
    - @all_countries.each do |country|
      = link_to country.name, country, class: 'button'
    #map{style: 'width: 100%; height: 500px;'}

.row
  .columns.large-12
    = cell(:stockist, collection: @paged_stockists, method: :teaser, site: @site)
    = paginate(@paged_stockists)


= content_for :footer_scripts do
  = render partial: 'maps/map', hash: @hash
