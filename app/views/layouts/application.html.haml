!!! 5
%html{ :lang => "en"}
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : c('site_name') + " Stockists | " + c('site_slogan')
    = render 'tag_manager'

    = stylesheet_link_tag "application"
    = stylesheet_link_tag "sites/#{c('site_code')}/custom"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tag

  %body
    .fixed
      %nav.top-bar{"data-topbar" => "", :role => "navigation"}
        %ul.title-area
          %li.name
            %h1
              = link_to root_path do 
                = image_tag('http://cdn.shopify.com/s/files/1/0717/7955/t/2/assets/logo.png?1311', style: 'height: 42px')
          / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
          %li.toggle-topbar.menu-icon
            %a{:href => "#"}
              %span Menu
        %section.top-bar-section
          / Right Nav Section
          %ul.right
            %li.has-form
              = form_tag(stockists_path, method: :get ) do
                .row.collapse
                  .large-9.small-9.columns
                    = text_field_tag :search, params[:search], placeholder: "Find a stockist"
                  .large-3.small-3.columns
                    = submit_tag 'Search', class: 'button expand small', name: nil
            %li.has-dropdown
              = link_to stockists_path do 
                Stockists
              %ul.dropdown
                %li
                  = link_to become_a_stockist_path do
                    Become a stockist.
                - @all_countries.order(name: :asc).each do |country|
                  %li
                    = link_to country, class: 'button' do
                      #{country.name}
            %li
              %a{:href => "#"} Shop Online
          / Left Nav Section
          %ul.left
            %li
              %a{:href => "http://eyeofhoruscosmetics.com"} 
                Go to website
    .container
      = yield
    %footer.row
      .columns.large-12
        %hr/
      .row.features
        .columns.large-6
          = render 'feature_1'
        .columns.large-6
          = render 'feature_2'
    .copyright
      .row
        .columns.large-5
          = link_to 'Stockist Center', media_center_path
          | 
          = link_to 'Online Shop', '#'
          | 
          = link_to 'Contact Us', '#'
        .columns.large-7.text-right
          &copy; #{c('copyright')} #{Time.now.year}



      

    = javascript_include_tag "application"
    %script{:src => "//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry", :type => "text/javascript" }
    %script{:src =>'//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js', :type =>'text/javascript' }
    = yield(:footer_scripts)
    :javascript
      $('#nearby').click(function(e) {
        e.preventDefault();
        //alert($(this).data('longitude'))
        window.open("/?long=" + $(this).data('longitude') + "&lat=" + $(this).data('latitude'));

      });

      function get_location() {
        if (Modernizr.geolocation) {
          navigator.geolocation.getCurrentPosition(show_map);
        } else {
          console.log('no map')
        }
      }
      function show_map(position) {
        var latitude = position.coords.latitude;
        var longitude = position.coords.longitude; 
        $('.nearby').show();
        $('#nearby').attr({'data-latitude': latitude, 'data-longitude': longitude});
      }
      get_location();
